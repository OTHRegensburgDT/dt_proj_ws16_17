<UserControl x:Class="MotorXPGUIMVVM.UserControls.DataDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gauge="clr-namespace:MotorXPGUIMVVM.Controls.Gauge"
             xmlns:lineChart="clr-namespace:MotorXPGUIMVVM.Controls.LineChart"
             xmlns:converter="clr-namespace:MotorXPGUIMVVM.Converter"
             mc:Ignorable="d" 
             Name="UcContainer"
             d:DesignHeight="800" d:DesignWidth="900" 
             DataContext="{Binding DataDisplayViewModel, Source={StaticResource Locator}}">
    <UserControl.Resources>
        <ResourceDictionary>
            <converter:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Controls/Gauge/GaugeResources.xaml"/>
                <ResourceDictionary Source="../Controls/LineChart/LineChartResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <ItemsControl Width="{Binding ElementName=UcContainer, Path=Width}"  ItemsSource="{Binding Repository.SensorDataCollections}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Expander Name="Expander" Header="{Binding Unit}" IsExpanded="True" Padding="8" Height="300" Width="800">
                    <Expander.Content>
                        <DockPanel>
                            <Viewbox DockPanel.Dock="Left" Name="GaugeViewBox" StretchDirection="Both" Margin="4" Stretch="Uniform">
                                <Border BorderBrush="LightGray"  BorderThickness="1" CornerRadius="2">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="4" Color="LightGray"/>
                                    </Border.Effect>
                                    <StackPanel  Name="GaugeGrid" Background="White">
                                        <Grid>
                                            <gauge:Gauge x:Name="TargetGauge" Width="150" Height="100" VerticalAlignment="Top" HorizontalAlignment="Stretch" MaxAngle="1.6" MinValue="{Binding MinValue}" MaxValue="{Binding MaxValue}" MinAngle="-1.6" NeedleColor="Transparent" GaugeBorderBrush="Transparent" NeedleBorderBrush="Red" Value="{Binding TargetValue}" Margin="0 8 0 0" StrokeColor="Transparent" MinMaxValueIndicatorBrush="Transparent" Foreground="Transparent" GaugeFill="Transparent"/>
                                            <gauge:Gauge x:Name="CurrentValueGauge" Width="150" Height="100" VerticalAlignment="Top" HorizontalAlignment="Stretch"  MaxAngle="1.6" MaxValue="{Binding MaxValue}" MinAngle="-1.6" GaugeBorderBrush="Transparent" NeedleBorderBrush="Gray" NeedleColor="White" Margin="0 8 0 0" StrokeColor="PowderBlue"  FontSize="8" MinMaxValueIndicatorBrush="Black" GaugeFill="Transparent" ValueIndicatorSize="16" Strokes="20" StrokeLength="0.5" StrokeThickness="2" Value="{Binding LastValue}" MinValue="{Binding MinValue}"/>
                                        </Grid>
                                        <!--Gauge slider-->
                                        <Slider Name="SliderGauge" Margin="8 -8 8 4" Minimum="{Binding MinValue}" Width="100" Maximum="{Binding MaxValue}" Value="{Binding TargetValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsSnapToTickEnabled="True"/>
                                        <!--Gauge Text area-->
                                        <StackPanel Orientation="Horizontal" Margin="8 0 8 8" HorizontalAlignment="Center">
                                            <Label FontSize="12" Content="Target: " VerticalContentAlignment="Top" VerticalAlignment="Top"></Label>
                                            <TextBox FontSize="12" Width="40" Height="26" Text="{Binding ElementName=SliderGauge, Path=Value, UpdateSourceTrigger=PropertyChanged , Mode=TwoWay}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Viewbox>
                            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="2" Margin="4">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="4" Color="LightGray"/>
                                </Border.Effect>
                                <DockPanel  Name="LineChartGrid" Background="White">
                                    <!--LineChart Column-->
                                    <!--Value LineChart-->
                                    <lineChart:LineChart DockPanel.Dock="Top" Values="{Binding Values}" MinHeight="147" AutoMinMax="False" Margin="8 8 8 0" SampleWindow="10" IsShowingAll="{Binding ShowAll, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="LineChart" Background="White" StrokeColor="Blue" FillColor="MintCream" AxisColor="DarkGray"/>
                                    <!--Target LineChart-->
                                    <!--
                            <lineChart:LineChart Grid.Column="1" Grid.Row="0" MinWidth="200" Values="{Binding TargetValue}" AutoMinMax="False" Margin="5 0"  
                                                     SampleWindow="10" IsShowingAll="{Binding ShowAll, Mode=TwoWay}" x:Name="LineChartTarget" Background="Transparent" 
                                                     StrokeColor="Red" FillColor="Transparent" FontSize="10" AxisColor="Transparent"/>-->

                                    <!--LineChart slider-->

                                    <DockPanel DockPanel.Dock="Bottom">
                                        <Slider DockPanel.Dock="Top" IsEnabled="{Binding ShowAll, Converter={StaticResource InverseBooleanConverter}}" Name="SliderLineChart" Minimum="0" Margin="48 8 8 0" Maximum="1" Width="{Binding ElementName=LineChart, Path=Width}" Value="{Binding ElementName=LineChart, Path=WindowPosition}" ToolTip="{Binding CurrentValue, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch"/>
                                        
                                        <StackPanel DockPanel.Dock="Bottom" Margin="48 8 8 8">
                                            <CheckBox FontSize="16" Content="Show All" Height="30" Command="{Binding ShowAllCommand}" IsChecked="{Binding ShowAll}"/>
                                            <Label FontSize="16" Content="{Binding CurrentValueText, UpdateSourceTrigger=PropertyChanged}" Height="30" Margin="-5" />

                                        </StackPanel>

                                    </DockPanel>
                                </DockPanel>
                            </Border>
                        </DockPanel>
                    </Expander.Content>
                </Expander>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Orientation="Vertical"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>
</UserControl>

